{
  "extends": "../tsconfig.base.json",
  "compilerOptions": {
    "outDir": "dist",
    "rootDir": ".",
    "module": "ESNext",
    "moduleResolution": "Node",
    "types": ["node"],
    "declaration": true,
    "skipLibCheck": true,
    "ignoreDeprecations": "6.0",
    "paths": {
      "@pos-app/shared-types/*": ["../packages/shared-types/src/*"]
    }
  },
  "include": ["main/**/*.ts", "preload/**/*.ts", "tsup.config.ts"]
}
